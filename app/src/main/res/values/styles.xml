<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/redSapienza</item>
        <item name="colorPrimaryDark">@color/redSapienzaDark</item>
        <item name="colorAccent">@android:color/holo_red_light</item>
    </style>

    <style name="LauncherTheme" parent = "AppThemeLight">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="backgroundColor">#FFFFFF</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppThemeLight" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/redSapienza</item>
        <item name="colorPrimaryDark">@color/redSapienzaDark</item>
        <item name="colorAccent">@android:color/holo_red_light</item>
        <item name="colorSecondary">@color/redSapienza</item>
        <item name="colorButtonNav">@color/redSapienza</item>
        <item name="primaryTextColor">#33343B</item>
        <item name="secondaryTextColor">#d3696969</item>
        <item name="dividerColor">#B6B6B6</item>
        <item name="backgroundColor">#f4f4f4</item>
        <item name="backgroundCardColor">#FFFFFF</item>
        <item name="bottomNavColor">#FFFFFF</item>
        <item name="defaultTextNav">#737373</item>
        <item name="certifiedExamColor">@color/green</item>
        <item name="nonPassedExamColor">@color/red</item>
        <item name="nonCertifiedExamColor">@color/yellow</item>
        <item name="colorNavText">#353535</item>
        <item name="colorHeader">@color/redSapienzaDark</item>
        <item name="popupBackgroundColor">@android:color/white</item>
        <item name="popupTextColor">@android:color/black</item>
        <item name="redSlider">@color/redSapienza</item>
        <item name="emptyViewColor">?attr/secondaryTextColor</item>

    </style>

    <style name="AppThemeDark" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/redSapienza</item>
        <item name="colorPrimaryDark">@color/redSapienzaDark</item>
        <item name="colorAccent">@android:color/holo_red_light</item>
        <item name="colorSecondary">#c91515</item>
        <item name="colorButtonNav">#e14242</item>
        <item name="primaryTextColor">#F4F4F6</item>
        <item name="secondaryTextColor">#96F4F4F6</item>
        <item name="backgroundCardColor">#424242</item>
        <item name="dividerColor">#96F4F4F6</item>
        <item name="backgroundColor">#212121</item>
        <item name="android:navigationBarColor">#212121</item>
        <item name="defaultTextNav">@android:color/white</item>
        <item name="colorNavText">@android:color/white</item>
        <item name="bottomNavColor">#303030</item>
        <item name="certifiedExamColor">@color/greenLight</item>
        <item name="nonPassedExamColor">@color/redLight</item>
        <item name="nonCertifiedExamColor">@color/yellowLight</item>
        <item name="colorHeader">@color/redSapienzaDark</item>
        <item name="popupTextColor">@android:color/white</item>
        <item name="popupBackgroundColor">#262626</item>
        <item name="redSlider">#d93535</item>
        <item name="emptyViewColor">@android:color/darker_gray</item>
    </style>

    <style name="popupMenuStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">?attr/popupTextColor</item>
        <item name="android:itemBackground">?attr/popupBackgroundColor</item>
    </style>

    <style name="NoActionBarAppDarkTheme" parent="AppThemeDark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ExamDarkTheme" parent="NoActionBarAppDarkTheme">
        <item name="android:navigationBarColor">#303030</item>
    </style>

    <style name="NoActionBarAppLightTheme" parent="AppThemeLight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="LoginTheme" parent="NoActionBarAppLightTheme">
        <item name="android:navigationBarColor">@color/redSapienza</item>
    </style>

    <style name="MyEditTextTheme">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/white</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>

    <style name="StatsThemeEditText">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="android:textColorHint">?attr/secondaryTextColor</item>
        <item name="colorControlActivated">?attr/secondaryTextColor</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>


    <style name="ToolBarStyle" parent="AppThemeDark">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ButtonReservations" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@android:color/darker_gray</item>
        <item name="android:colorAccent">@color/redSapienza</item>
    </style>

    <style name="AppTheme.MaterialAboutActivityDark" parent="Theme.Mal.Dark">
        <item name="colorPrimary">@color/redSapienza</item>
        <item name="colorPrimaryDark">@color/redSapienzaDark</item>
        <item name="colorAccent">@android:color/holo_red_light</item>
        <item name="android:navigationBarColor">#303030</item>
        <item name="primaryTextColor">#FFFFFF</item>
    </style>
    <style name="AppTheme.MaterialAboutActivityLight" parent="Theme.Mal.Light.DarkActionBar">
        <item name="colorPrimary">@color/redSapienza</item>
        <item name="colorPrimaryDark">@color/redSapienzaDark</item>
        <item name="colorAccent">@android:color/holo_red_light</item>
        <item name="primaryTextColor">@android:color/black</item>
    </style>


    <style name="BasePreferencesTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textColorSecondary">?attr/secondaryTextColor</item>
    </style>
    <style name="PreferencesDark" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="colorPrimary">@color/redSapienza</item>
        <item name="colorPrimaryDark">@color/redSapienzaDark</item>
        <item name="colorAccent">@android:color/holo_red_light</item>
        <item name="colorSecondary">#c91515</item>
        <item name="colorButtonNav">#e14242</item>
        <item name="primaryTextColor">#F4F4F6</item>
        <item name="secondaryTextColor">#96F4F4F6</item>
        <item name="backgroundCardColor">#424242</item>
        <item name="dividerColor">#96F4F4F6</item>
        <item name="backgroundColor">#212121</item>
        <item name="android:navigationBarColor">#212121</item>
        <item name="defaultTextNav">@android:color/white</item>
        <item name="colorNavText">@android:color/white</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textColorSecondary">?attr/secondaryTextColor</item>
        <item name="android:alertDialogTheme">@style/ThemeDarkAlertDialog</item>
    </style>

    <style name="PreferencesLight" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="colorPrimary">@color/redSapienza</item>
        <item name="colorPrimaryDark">@color/redSapienzaDark</item>
        <item name="colorAccent">@android:color/holo_red_light</item>
        <item name="colorSecondary">@color/redSapienza</item>
        <item name="colorButtonNav">@color/redSapienza</item>
        <item name="primaryTextColor">#33343B</item>
        <item name="secondaryTextColor">@android:color/darker_gray</item>
        <item name="dividerColor">#B6B6B6</item>
        <item name="backgroundColor">@android:color/background_light</item>
        <item name="android:alertDialogTheme">@style/ThemeLightAlertDialog</item>
    </style>

    <style name="ThemeLightDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/redSapienza</item>
        <item name="colorPrimaryDark">@color/redSapienzaDark</item>
        <item name="colorAccent">@android:color/holo_red_light</item>
        <item name="android:colorAccent">?attr/colorAccent</item>
    </style>

    <style name="ThemeDarkDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/redSapienza</item>
        <item name="colorPrimaryDark">@color/redSapienzaDark</item>
        <item name="colorAccent">@android:color/holo_red_light</item>
        <item name="android:background">#212121</item>
        <item name="primaryTextColor">#F4F4F6</item>
        <item name="secondaryTextColor">#96F4F4F6</item>
        <item name="android:textColorPrimary">?attr/primaryTextColor</item>
        <item name="android:colorAccent">?attr/colorAccent</item>
        <item name="android:colorPrimary">@android:color/white</item>
        <item name="android:colorPrimaryDark">?attr/colorPrimaryDark</item>
        <item name="android:textColorAlertDialogListItem">?attr/primaryTextColor</item>
        <item name="android:textColorSecondary">?attr/secondaryTextColor</item>
        <item name="textColorAlertDialogListItem">?attr/primaryTextColor</item>
    </style>

    <style name="ThemeDarkAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/redSapienza</item>
        <item name="colorPrimaryDark">@color/redSapienzaDark</item>
        <item name="colorAccent">@android:color/holo_red_light</item>
        <item name="android:colorAccent">@android:color/holo_red_light</item>
        <item name="android:background">#212121</item>
        <item name="primaryTextColor">#F4F4F6</item>
        <item name="secondaryTextColor">#96F4F4F6</item>
        <item name="android:textColorAlertDialogListItem">?attr/primaryTextColor</item>
        <item name="android:textColorSecondary">?attr/secondaryTextColor</item>
        <item name="textColorAlertDialogListItem">?attr/primaryTextColor</item>
    </style>

    <style name="ThemeLightAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/redSapienza</item>
        <item name="colorPrimaryDark">@color/redSapienzaDark</item>
        <item name="colorAccent">@android:color/holo_red_light</item>
    </style>

    <style name="AboutLibrariesThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/redSapienza</item>
        <item name="colorPrimaryDark">@color/redSapienzaDark</item>
        <item name="colorAccent">@android:color/holo_red_light</item>
        <!-- AboutLibraries specific values -->
        <item name="about_libraries_window_background">#212121</item>
        <item name="about_libraries_card">#424242</item>
        <item name="about_libraries_title_openSource">#F4F4F6</item>
        <item name="about_libraries_text_openSource">#B6B6B6</item>
        <item name="about_libraries_special_button_openSource">#B6B6B6</item>
        <item name="about_libraries_dividerDark_openSource">#B6B6B6</item>
        <item name="about_libraries_dividerLight_openSource">#B6B6B6</item>
        <item name="android:navigationBarColor">#2E2E2E</item>
    </style>

    <style name="AboutLibrariesThemeLight" parent="Theme.AppCompat.NoActionBar">
        <item name="primaryTextColor">#33343B</item>
        <item name="secondaryTextColor">#d3696969</item>
        <item name="colorPrimary">@color/redSapienza</item>
        <item name="colorPrimaryDark">@color/redSapienzaDark</item>
        <item name="colorAccent">@android:color/holo_red_light</item>
        <item name="backgroundColor">@android:color/holo_red_dark</item>
        <item name="android:windowBackground">@color/about_libraries_window_background</item>
        <item name="android:colorBackground">@color/about_libraries_window_background</item>
        <!-- AboutLibraries specific values -->
        <item name="about_libraries_window_background">@color/about_libraries_window_background</item>
        <item name="about_libraries_card">@color/about_libraries_card</item>
        <item name="about_libraries_title_openSource">@color/about_libraries_title_openSource</item>
        <item name="about_libraries_text_openSource">@color/about_libraries_text_openSource</item>
        <item name="about_libraries_special_button_openSource">@color/about_libraries_special_button_openSource</item>
        <item name="about_libraries_dividerDark_openSource">@color/about_libraries_dividerDark_openSource</item>
        <item name="about_libraries_dividerLight_openSource">@color/about_libraries_dividerLight_openSource</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
