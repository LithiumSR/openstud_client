<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/pref_title_general">
        <CheckBoxPreference
            android:title="@string/enable_lessons"
            android:summary="@string/enable_lessons_description"
            android:key="@string/key_enable_lesson"
            android:defaultValue="false"/>
        <EditTextPreference
            android:title="@string/default_laude"
            android:defaultValue="30"
            android:key="@string/key_default_laude"
            android:inputType="numberDecimal" />
        <Preference android:title="@string/delete_pdf" android:key="@string/key_delete">
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_title_themes">
        <ListPreference
            android:defaultValue="0"
            android:dialogTitle="@string/title_theme"
            android:entries="@array/pref_theme"
            android:entryValues="@array/pref_theme_values"
            android:key="@string/key_theme"
            android:summary="@string/summary_theme"
            android:title="@string/title_theme" />
    </PreferenceCategory>
</PreferenceScreen>